<Window x:Class="ProjectMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMaze"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Title="MainWindow" 
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="135"/>
        </Grid.ColumnDefinitions>
        
        <Viewbox Grid.Column="0">
            <ItemsControl Name="Map">
                <ItemsControl.Background>
                    <ImageBrush ImageSource="src/bkg.png"/>
                </ItemsControl.Background>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:Cell}">
                                    <Border Width="30" Height="30" Background="{Binding Bkg}">
                                        <Image Source="{Binding File}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Viewbox>
        
        <Grid Grid.Column="1"
              GotFocus="BarGrid_GotFocus">
            <ListBox>
                <Label Height="25" Width="120"
                       Content="Ширина:"
                       GotFocus="BarGrid_GotFocus"/>
                <TextBox Height="30" Width="120"
                         VerticalContentAlignment="Center"
                         KeyDown="CheckOnlyDigitsKeyDown"
                         Text="{Binding RowsCount, Mode=OneWayToSource}"
                         GotFocus="BarGrid_GotFocus"/>
                <Label Height="25" Width="120"
                       Content="Высота:"
                       GotFocus="BarGrid_GotFocus"/>
                <TextBox Height="30" Width="120"
                         VerticalContentAlignment="Center"
                         KeyDown="CheckOnlyDigitsKeyDown"
                         Text="{Binding ColumnsCount, Mode=OneWayToSource}"
                         GotFocus="BarGrid_GotFocus"/>
                <Label Height="25" Width="120"
                       Content="Сложность:"
                       GotFocus="BarGrid_GotFocus"/>
                <ComboBox Height="30" Width="120"
                          Text="0"
                          VerticalContentAlignment="Center"
                          SelectedItem="0"
                          SelectedIndex="0"
                          GotFocus="BarGrid_GotFocus">
                    <ComboBoxItem>Легко</ComboBoxItem>
                    <ComboBoxItem>Средне</ComboBoxItem>
                    <ComboBoxItem>Сложно</ComboBoxItem>
                </ComboBox>
                <Button Margin="0,10,0,0" 
                        Height="30" Width="120"
                        Content="Сгенерировать"
                        Click="MapGenerateButton"
                        GotFocus="BarGrid_GotFocus">
                </Button>
            </ListBox>

            <ListView Visibility="Hidden" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <TextBox Name="inputTB" Width="150" Height="40" Text="lalka"></TextBox>
                <TextBox Name="output" Width="auto" Height="50"></TextBox>
                <Button Width="120" Height="50" Click="Button_Click"></Button>
            </ListView>
        </Grid>
    </Grid>
</Window>
